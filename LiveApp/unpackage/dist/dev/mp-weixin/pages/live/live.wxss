
page {
		height: 100%;
		overflow: hidden;
}
.live-container {
		height: 100%;
		display: flex;
		flex-direction: column;
		background-color: #000000;
}
.live-content {
		position: relative;
		flex: 1;
		overflow: hidden;
}
.video-swiper {
		width: 100%;
		height: 100%;
}
.stream-item {
		width: 100%;
		height: 100%;
		position: relative;
}
.stream-item video {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
}
.stream-info {
		position: absolute;
		bottom: 200rpx;
		left: 20rpx;
		right: 20rpx;
		background: rgba(0, 0, 0, 0.6);
		padding: 20rpx;
		border-radius: 10rpx;
}
.stream-title {
		color: #ffffff;
		font-size: 32rpx;
		font-weight: bold;
}
.no-stream {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 100%;
		background-color: #000000;
		width: 100%;
}
.no-stream-text {
		color: #ffffff;
		font-size: 36rpx;
}
